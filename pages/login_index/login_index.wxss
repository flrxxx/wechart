/* pages/login_index/login_index.wxss */
.container{
  background-image: url("http://flrxxx.gz01.bdysite.com/tempimage/bodybg.png");
}
.userinfo{
  position: relative;
  height: 200rpx;
  width: 100%;
}
.userinfobox{
  position: relative;
  z-index: 10;
  padding-top:37rpx;
  text-align: center;
}
.titlebg{
  position: absolute;
  top:0px;
  left: 0px;
  right: 0px;
  bottom:0px;
  z-index: 1;
  width: 100%;
  height: 100%;
}
.userpic{
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  overflow: hidden;
  display: inline-block;
  vertical-align: middle;
  margin-right: 30rpx;
}
.card_info_user_img{
  width: 100%;
  height: 100%;
}
.userinfo_text{
  display: inline-block;
  font-size: 22rpx;
  color:#ceb58c;
  height: 128rpx;
  vertical-align: middle;
  text-align: left;
}
.username{
  font-size: 38rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: left;
}

.usertime{
  height: 48rpx;
  line-height: 48rpx;
}
.userlvl{
  height: 30rpx;
  box-sizing: border-box;
  padding-top: 5rpx;
}
.userlvl image{
  width: 24rpx;
  height: 20rpx;
  margin-right:5rpx;
}
.banner{
  width: 100%;
  height: 492rpx;
  margin-bottom: 30rpx;
}
.banner image{
  width: 100%;
  height: 100%;
}
.textinfo{
  color:#ceb58c;
  margin-bottom: 30rpx;
}
.textinfo text{
  display: block;
  text-align: center;
  font-size: 24rpx;
  line-height: 46rpx;
}
.textinfo .title{
  font-size: 28rpx;
  font-weight: bold;
}