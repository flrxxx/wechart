/* pages/login/login.wxss */
.loginpage{
  position: absolute;
  top:0px;
  bottom:0px;
  left: 0px;
  right: 0px;
  z-index: 100;
  background-color: #fff;
}
.header {
    margin: 90rpx 0 90rpx 50rpx;
    border-bottom: 1px solid #ccc;
    text-align: center;
    width: 650rpx;
    height: 300rpx;
    line-height: 300rpx;
}
 
.header image {
    width: 128rpx;
    height: 128rpx;
    border-radius: 50%;
}
 
.content {
    margin-left: 50rpx;
    margin-bottom: 90rpx;
}
 
.content text {
    display: block;
    color: #9d9d9d;
    margin-top: 40rpx;
}
 
.bottom {
    border-radius: 80rpx;
    margin: 70rpx 50rpx;
    font-size: 35rpx;
}